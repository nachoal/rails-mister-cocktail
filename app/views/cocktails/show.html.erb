<div class="container">
  <h2><strong><%= @cocktail.name %></strong></h2>
  <%= cl_image_tag @cocktail.photo, height: 400, width: 280 %>
  <h3 style="font-weight:300">Ingredients:</h3>
  <ul>
    <% @cocktail.doses.each do |dose| %>
    <li>
      <%= dose.ingredient.name %> - <%= dose.description %>
      <%= link_to("Delete",dose,method: :delete) %>
    </li>
  </ul>
    <% end %>
  <%= link_to("Add a dose", new_cocktail_dose_path(@cocktail)) %>
</div>