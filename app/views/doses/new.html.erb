<div class="container">
  <h2>Add a dose to <%= @cocktail.name %></h2>
  <%= simple_form_for [@cocktail, @dose] do |f| %>
    <%= f.input :description %>
    <%= f.association :ingredient %>
    <%= f.button :submit, class: "btn btn-success" %>
  <% end %>
  <%= link_to("Back", "/", class:"btn btn-warning") %>
</div>
</div>